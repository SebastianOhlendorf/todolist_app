<%- include("partials/header.ejs") %>

  <h1>ToDo-List</h1>

  <form action="/submit" method="POST">
    <input type="text" id="text" name="text" placeholder="What is your todos?">
    <input type="submit" id="button" value="Add">
  </form>

  <div class="container">
    <div class="box left-box">
      <h2>Current open todos</h2>
      <ul>
        <% if (locals.todos.length> 0) { %>
          <% todos.forEach(todo=> { %>
            <li>
              <form class="container-form" action="/remove" method="POST">
                <input class="left-box-form" type="text" name="text" value="<%= todo %>">
                <input class="right-box-form" type="submit" value="completed">
              </form>
            </li>
            <%});%>
      </ul>
      <% } else { %>
        <p>todos not set right now</p>
        <% } %>
    </div>

    <div class="box right-box">
      <h2>Completed todos</h2>
      <ul>
        <% if (locals.todosCompleted.length> 0) { %>
          <% todosCompleted.forEach(todo=> { %>
            <li>
              <form class="container-form" action="/delete" method="POST">
                <input class="left-box-form" type="text" name="text" value="<%= todo %>">
                <input class="right-box-form" type="submit" value="delete">
              </form>
            </li>
            <%});%>
              
      </ul>
      <% } else { %>
        <p>todos not set right now</p>
        <% } %>
    </div>
  </div>

  <%- include("partials/footer.ejs") %>